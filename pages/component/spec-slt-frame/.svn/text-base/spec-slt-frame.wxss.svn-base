.dialog_mask {
  position: fixed;top: 0;left: 0;right: 0;bottom: 0;z-index: 98;background: rgba(0, 0, 0, 0.5);display: none;
}
.dialog_container {
  position: fixed;bottom: 0;width: 750rpx;background: white;transform: translateY(150%);transition: all 0.4s ease;z-index: 99;
}
.dialog_show .dialog_container {
  transform: translateY(0);
}
.dialog_show .dialog_mask {
  display: block;
}

.spec-img-container {
  height: 220rpx;
  border-bottom: 2px solid #f5f5f5;
  display: flex;
  flex-direction: row;
}

.spec-img-container 
image {
  width: 180rpx;
  height: 180rpx;
  margin-top: -32rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  border: 2px #f5f5f5 solid;
  border-radius: 5px;
  background-color: #d8d8d8;
}

.spec-img-container 
.middle {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.spec-img-container 
.name {
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
}

.sku-surplus-view {
  font-size: 24rpx;
  color: #999;
}

.spec-img-container 
.price {
  margin-bottom: 20rpx;
}

.good-price {
  font-size: 36rpx;
  color: #f40;
}

.good-price-icon {
  font-size: 28rpx;
  color: #f40;
}

.spec-img-container 
.clear {
  margin-top: 20rpx;
  margin-right: 10rpx;
}

.spec-view-container {
  width: 100%;
  border-bottom: 2px solid #f5f5f5;
}

.spec-view-container
.modal-de-select {
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.spec-view-container
.modal-spec {
  margin-left: 40rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  overflow: hidden;
  min-height: 80rpx;
}

.spec-view-container
.modal-spec-item {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  border-radius: 25rpx;
  text-align: center;
  min-width: 18%;
  height: 40rpx;
  line-height: 40rpx;
  float: left;
  margin-right: 20rpx;
  padding: 0rpx 25rpx;
}

/* 未选中 */
.spec-view-container
.modal-spec-item-0 {
  border: 2rpx #ccc solid;
  color: #000;
  
}
/* 选中 */
.spec-view-container
.modal-spec-item-1 {
  color: #D32323;
  border: 2rpx #D32323 solid;
  background-color: #FFE6E6;
}

/* 不可选 */
.spec-view-container
.modal-spec-item-2 {
  color: #ccc;
  border: 2rpx #FFE6E6 dashed ;
  background-color: #eee;
  text-decoration: line-through;
}

.buy-num {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.buy-num
.font-num {
  margin-left: 20rpx;
}

.stepper {
  width: 218rpx;
  height: 62rpx;
  /*给主容器设一个边框*/
  border: 2rpx solid #ccc;
  border-radius: 50rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
}

/*加号和减号*/
.stepper text {
  width: 60rpx;
  height: 100%;
  line-height: 62rpx;
  text-align: center;
  float: left;
}

/*数值*/
.stepper input {
  width: 90rpx;
  height: 62rpx;
  float: left;
  text-align: center;
  font-size: 32rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

/*普通样式*/
.stepper .normal {
  color: black;
}

/*禁用样式*/
.stepper .disabled {
  color: #ccc;
}

.modal_button {
  flex-direction: row;
  background-color: #c62127;
  position: inherit;
  bottom: 0;
  z-index: 100;
  width: 750rpx;
  height: 106rpx;
  line-height: 106rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
}

.modal-button-two {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* float: left; */
  background-color: #fff;
  /* position: inherit; *//* bottom: 0; *//* right: 0; *//* z-index: 10; */
  width: 100%;
  /* height: 50px; */
}

.modal-button-two
button {
  border-radius: 0px;
}

.modal-button-two
.modal-type- {
  width: 50%;
}

.modal-button-two
.modal-type-0 {
  margin-top: 20rpx;
  width: 100%;
}

.modal-button-two
.modal-type-1 {
  display: none;
}

