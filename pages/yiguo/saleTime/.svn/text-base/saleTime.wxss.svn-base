/* pages/yiguo/saleTime/saleTime.wxss */

.swiper-box {
  height: 380rpx;
  background-color: #fff;
}

.slide-image {
  display: block;
  height: 380rpx;
  width: 100%;
  background-color: #eee;
}

.good {
  width: 710rpx;
  height: 600rpx;
  margin: 20rpx;
  border-bottom: 2rpx solid #eee;
  background-color: #fff;
}

.good-img {
  width: 710rpx;
  height: 380rpx;
  background-color: #eee;
}

.msg {
  display: flex;
}

.activity-view {
  background: #fff;
}

.activity-title {
  height: 70rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 2rpx solid #eef;
}

.activity-title .title-left {
  line-height: 70rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
}

.activity-title .title-right {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.activity-title .right-name {
  /* line-height: 60rpx; */
  font-size: 30rpx;
  color: #aaa;
  margin-right: 6rpx;
}

.activity-title .right-hr {
  height: 45rpx;
  line-height: 45rpx;
  padding: 0rpx 4rpx 0rpx 4rpx;
  margin: 0rpx 6rpx 0rpx 6rpx;
  background-color: #000;
  color: #fff;
  font-size: 28rpx;
  border-radius: 4rpx 4rpx 4rpx 4rpx;
}

.activity-title .right-min {
  height: 45rpx;
  line-height: 45rpx;
  padding: 0rpx 4rpx 0rpx 4rpx;
  margin: 0rpx 6rpx 0rpx 6rpx;
  background-color: #000;
  color: #fff;
  font-size: 28rpx;
  border-radius: 4rpx 4rpx 4rpx 4rpx;
}

.activity-title .right-sec {
  height: 45rpx;
  line-height: 45rpx;
  padding: 0rpx 4rpx 0rpx 4rpx;
  margin: 0rpx 6rpx 0rpx 6rpx;
  background-color: #000;
  color: #fff;
  font-size: 28rpx;
  border-radius: 4rpx 4rpx 4rpx 4rpx;
}
.good-detail {
  background-color: #fff;
  flex-direction: column;
}
.good-detail-title {
  flex-direction: column;
  padding-left: 30rpx;
  padding-top: 20rpx;
}

/* 商品详情 */
.good-foot {
  display: flex;
}
.good-msg {
  width: 70%;
}
/* 商品价格 */
.title-price {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-left: 30rpx; 
  display: flex;
}
/* 优惠 */
.sale {
  width: 30%;
}
.sale-priceIcon {
  font-family: Arial;
  color: #f40;
  font-size: 28rpx;
  /* font-weight: 600; */
}
.sale-price {
  /* font-family: 宋体; *//* font-weight: 600; */
  color: #f40;
  font-size: 36rpx;
}
/* 原价 */
.original {
  color: #c3c3c3;
  /* text-decoration:line-through; */
}
.original-priceIcon {
  font-family: Arial;
  font-size: 24rpx;
  /* font-weight: 600; */
}
.original-price {
  /* font-family: 宋体; *//* font-weight: 600; */
  font-size: 28rpx;
}

.stock {
  display: flex;
}
.stock-msg {
  padding-left: 30rpx;
  width: 30%;
  font-family: Arial;
  font-size: 24rpx;
  color: #c3c3c3;
}
/* 库存进度条 */
.stock-progress {
  width: 60%;
  height: 9rpx;
  margin-top: 10rpx;
  border: 1rpx solid #f57a7a;
  border-radius: 50rpx;
}
.good-buy {
  align-items: center;
  display: flex;
}
/* 购买 */
.good-buy-but {
  width: 180rpx;
  height: 60rpx;
  border-radius: 50rpx;
  background-color: #f57a7a;
  text-align: center;
  line-height:60rpx;
  font-size: 30rpx;
  color: #fff;
}

.view-text {
  width: 60%;
  background-color: #0ee;
}

.view-price {
  width: 40%;
  background-color: #e0e;
}